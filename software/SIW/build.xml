			<classpath refid="proj.class.path" />
		</javac>
	</target>

	<target name="prepare" depends="compile">
		<echo>....Build target prepare....</echo>
	    <condition property="tier.suffix" value="">
	        <equals arg1="${tier}" arg2="prod"/>
	    </condition>
	    <condition property="tier.suffix" value="-${tier}">
	    	<not>  
	    		<isset property="tier.suffix"/>
	    	</not>
	    </condition>
		<!-- property name="tier.suffix" value="-${tier}" / -->
		<property name="publicAPI.tier" value="https://cadsrapi${tier.suffix}.nci.nih.gov/cadsrapi4/services/cadsrapi41Service" />
		<property name="freestyle.tier" value="https://freestyle${tier.suffix}.nci.nih.gov" />
		<property name="datatypeMapping.tier" value="https://cadsrsiw${tier.suffix}.nci.nih.gov/datatype-mapping.xml" />
		<echo>tier: '${tier}', tier.suffix: '${tier.suffix}'</echo>
		<copy todir="${class.dir}" overwrite="true">
			<fileset dir="${config.dir}">
				<include name="*.properties" />
				<include name="jaas.config" />
				<include name="beans.xml" />
				<include name="loader-spring.xml" />
				<include name="log4j.xml" />
				<include name="spring-datasources.xml" />
				<include name="ehcache.xml" />
				<!--        <include name="datatype-mapping.xml"/> -->
				<include name="about.html" />
				<include name="cache.ccf" />
			</fileset>
			<fileset dir="${images.dir}">
				<include name="*.png" />
				<include name="*.jpg" />
				<include name="*.gif" />
			</fileset>
		</copy>
		<copy file="${config.dir}/application-config-client-65.xml" tofile="${class.dir}/application-config-client.xml" overwrite="true">
		</copy>
		<replace file="${class.dir}/application-config-client.xml" token="@@--tier--@@" value="${tier.suffix}" />
		<replace file="${class.dir}/beans.xml" token="@@--Public API URL Here--@@" value="${publicAPI.tier}" />
		<replace file="${class.dir}/beans.xml" token="@@--Freestyle URL Here--@@" value="${freestyle.tier}" />
		<replace file="${class.dir}/beans.xml" token="@@--DatatypeMapping URL Here--@@" value="${datatypeMapping.tier}" />

		<replace file="${class.dir}/semantic.properties" token="@@--Public API URL Here--@@" value="${publicAPI.tier}" />

		<replace file="${class.dir}/resources.properties" token="@@--Public API URL Here--@@" value="${publicAPI.tier}" />

	</target>

